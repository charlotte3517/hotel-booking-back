<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.charlotte3517.hotelbooking.dao.UserDao">

    <resultMap id="UserResult" type="com.github.charlotte3517.hotelbooking.user.User">
        <id property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="username" column="user_name" jdbcType="VARCHAR"/>
        <result property="passwordHash" column="password_hash" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="createdAt" column="created_at" jdbcType="DATE"/>
        <result property="createUserId" column="created_user_id" jdbcType="INTEGER"/>
        <result property="updatedAt" column="updated_at" jdbcType="DATE"/>
        <result property="updatedUserId" column="updated_user_id" jdbcType="INTEGER"/>
    </resultMap>

    <select id="getAllUsers" resultMap="UserResult">
        SELECT * FROM Web_User
    </select>

    <select id="getUserById" resultMap="UserResult">
        SELECT * FROM Web_User WHERE user_id = #{userId}
    </select>

    <insert id="insertUser" parameterType="com.github.charlotte3517.hotelbooking.user.User">
        INSERT INTO Web_User (user_id, user_name, password_hash, email, created_at, created_user_id)
        VALUES (web_user_seq.nextval, #{username}, #{passwordHash}, #{email}, #{createdAt}, #{createUserId})
    </insert>

    <update id="updateUser" parameterType="com.github.charlotte3517.hotelbooking.user.User">
        UPDATE Web_User SET user_name = #{username}, password_hash = #{passwordHash}, email = #{email}, updated_at = #{updatedAt}, updated_user_id = #{updatedUserId} WHERE user_id = #{userId}
    </update>

    <delete id="deleteUser">
        DELETE FROM Web_User WHERE user_id = #{userId}
    </delete>

</mapper>
